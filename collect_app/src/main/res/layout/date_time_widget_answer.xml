<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <org.odk.collect.android.views.MultiClickSafeButton
        android:id="@+id/date_button"
        style="@style/Widget.Collect.Button.Custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:text="@string/select_date">
    </org.odk.collect.android.views.MultiClickSafeButton>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/date_answer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:paddingStart="@dimen/margin_standard"
        android:paddingEnd="@dimen/margin_standard"
        android:textColor="?colorOnSurface"
        android:textAppearance="@style/TextAppearance.Collect.Body1"
        android:text="@string/no_date_selected"
        />

    <org.odk.collect.android.views.MultiClickSafeButton
        android:id="@+id/time_button"
        style="@style/Widget.Collect.Button.Custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_standard"
        android:text="@string/select_time">
    </org.odk.collect.android.views.MultiClickSafeButton>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/time_answer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:paddingStart="@dimen/margin_standard"
        android:paddingEnd="@dimen/margin_standard"
        android:textColor="?colorOnSurface"
        android:textAppearance="@style/TextAppearance.Collect.Body1"
        android:text="@string/no_time_selected"
        />

</LinearLayout>