<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:odk="http://www.opendatakit.org/xforms" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>required</h:title>
    <model>
      <itext>
        <translation lang="default" default="true()">
          <text id="/required/text2:label">
            <value>Text with audio</value>
            <value form="audio">jr://audio/blah.mp3</value>
          </text>
        </translation>
      </itext>
      <instance>
        <required id="required">
          <text/>
          <text2/>
          <meta>
            <instanceID/>
            <orx:audit/>
          </meta>
        </required>
      </instance>
      <bind jr:requiredMsg="Custom required message" nodeset="/required/text" required="true()" type="string"/>
      <bind nodeset="/required/text2" required="true()" type="string"/>
      <bind nodeset="/data/orx:meta/audit" type="binary" />
      <bind calculate="concat('uuid:', uuid())" nodeset="/required/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/required/text">
      <label>Foo</label>
    </input>
    <input ref="/required/text2">
      <label ref="jr:itext('/required/text2:label')"/>
    </input>
  </h:body>
</h:html>
